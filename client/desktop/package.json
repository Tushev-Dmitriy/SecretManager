{
  "name": "@secret-manager/desktop",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Bite The Dust"
  },
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "dev:electron": "npm run build:electron && concurrently \"npm run dev\" \"cross-env NODE_ENV=development electron .\"",
    "build:electron": "npm run build && tsc --project src/main/tsconfig.json",
    "dist": "npm run build:electron && electron-builder",
    "dist:win": "npm run build:electron && electron-builder --win",
    "dist:mac": "npm run build:electron && electron-builder --mac",
    "dist:linux": "npm run build:electron && electron-builder --linux"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.132.33",
    "@tanstack/react-router-devtools": "^1.132.33",
    "auto-launch": "^5.0.6",
    "clsx": "^2.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@tanstack/eslint-plugin-router": "^1.132.31",
    "@tanstack/router-plugin": "^1.132.33",
    "@types/auto-launch": "^5.0.5",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "vite": "^7.1.7"
  }
}
